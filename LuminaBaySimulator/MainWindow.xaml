<Window x:Class="LuminaBaySimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuminaBaySimulator"
        mc:Ignorable="d"
        Title="Lumina Bay Simulator - Gameplay Loop" Height="650" Width="1000"
        Background="#F5F5F5">

    <d:Window.DataContext>
        <local:MainViewModel/>
    </d:Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Background" Value="#EEE"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#333" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding WorldTime.FullDateString}" Foreground="#FFD700" FontWeight="Bold"/>
                    <TextBlock Text="{Binding WorldTime.LocalizedPhase}" Foreground="White" FontSize="20"/>
                </StackPanel>

                <Border Grid.Column="1" Background="#CC000000" CornerRadius="20" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5"
                        Visibility="{Binding IsStatusVisible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#4FC3F7" FontWeight="Bold" FontSize="14">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#4FC3F7" BlurRadius="10"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="#43A047" CornerRadius="5" Padding="10,5" Margin="0,0,10,0">
                        <TextBlock Text="{Binding Player.Money, StringFormat='{}€ {0}'}" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <StackPanel Width="100" VerticalAlignment="Center">
                        <ProgressBar Value="{Binding Player.Energy}" Height="8" Margin="0,2" Foreground="#76FF03" ToolTip="Energia"/>
                        <ProgressBar Value="{Binding Player.Stress}" Height="8" Margin="0,2" Foreground="#FF3D00" ToolTip="Stress"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#EEE" Padding="10">
            <DockPanel LastChildFill="False">

                <Button DockPanel.Dock="Left" 
                        Command="{Binding BackToMapCommand}" 
                        Content="⬅ TORNA ALLA MAPPA" 
                        Background="#5C6BC0" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Padding="15,5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewMode}" Value="Map">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="💤 Dormi" Command="{Binding SleepCommand}" Padding="10,5" Margin="5,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="2" Background="#F5F5F5">

            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentViewMode}" Value="Map">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <ItemsControl ItemsSource="{Binding AvailableLocations}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Margin="20"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.TravelToLocationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" Margin="10">
                                <Border Width="180" Height="120" Background="White" CornerRadius="8" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="📍" FontSize="30" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentViewMode}" Value="LocationInside">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <DockPanel Margin="20">
                    <TextBlock DockPanel.Dock="Top" Text="{Binding CurrentLocation.Name}" FontSize="24" FontWeight="Bold"/>
                    <Button DockPanel.Dock="Top" Content="Vai al Negozio" Command="{Binding OpenShopCommand}" HorizontalAlignment="Left" Margin="0,10"/>

                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding NpcsInLocation}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" Margin="0,5" Padding="10" CornerRadius="4">
                                        <DockPanel>
                                            <Image Source="{Binding SpritePath}" Width="50" DockPanel.Dock="Left"/>
                                            <Button Content="PARLA" DockPanel.Dock="Right" VerticalAlignment="Center"
                                                    Command="{Binding DataContext.InteractWithNpcCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                            <StackPanel Margin="10,0">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding CurrentLocation}" FontStyle="Italic"/>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Grid>

            <Grid Background="#FFF3E0">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentViewMode}" Value="Shop">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <DockPanel Margin="20">
                    <TextBlock DockPanel.Dock="Top" Text="🛒 Negozio" FontSize="24" Foreground="#E65100"/>
                    <ItemsControl ItemsSource="{Binding CurrentShopInventory}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" Width="150" Margin="5" Padding="5" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Cost, StringFormat='{}{0}€'}" Foreground="Green"/>
                                        <Button Content="COMPRA" Command="{Binding DataContext.BuyItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Background="#4CAF50" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </Grid>

            <Grid Background="White">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentViewMode}" Value="Dialogue">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="{Binding CurrentNpc.SpritePath}" Stretch="UniformToFill" VerticalAlignment="Bottom"/>

                <Border Grid.Column="1" Background="#FAFAFA" Margin="20" Padding="20" BorderBrush="#EEE" BorderThickness="2" CornerRadius="10">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentNpc.Name}" FontSize="22" FontWeight="Bold" Foreground="{Binding CurrentNpc.HexColor}"/>
                        <TextBlock Text="{Binding CurrentDialogueNode.Text}" FontSize="18" TextWrapping="Wrap" Margin="0,20"/>

                        <ItemsControl ItemsSource="{Binding CurrentDialogueNode.Choices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Text}" Command="{Binding DataContext.SelectChoiceCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="0,5" Padding="10"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <Border Grid.Row="3" Background="#212121" Padding="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="🛠 DEBUG ZONE:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <Button Content="+100€" Command="{Binding DebugAddMoneyCommand}" Background="#FFD600" Foreground="Black" Margin="2"/>
                <Button Content="⏩ Skip Time" Command="{Binding DebugSkipTimeCommand}" Background="#29B6F6" Foreground="White" Margin="2"/>
                <Button Content="❤ Heal" Command="{Binding DebugRestoreStatsCommand}" Background="#EF5350" Foreground="White" Margin="2"/>

                <Rectangle Width="1" Fill="Gray" Margin="10,2"/>

                <Button Content="💾 SAVE" Command="{Binding SaveGameCommand}" Background="#7B1FA2" Foreground="White" FontWeight="Bold" Margin="2"/>
                <Button Content="📂 LOAD" Command="{Binding LoadGameCommand}" Background="#7B1FA2" Foreground="White" FontWeight="Bold" Margin="2"/>
            </StackPanel>
        </Border>

    </Grid>

</Window>